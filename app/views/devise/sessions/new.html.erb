<div class="card mt-4">
  <div class="card-header">
    <h2>Log in</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email, class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true,class:"form-control mb-2", autocomplete: "email" %>
      </div>

      <div class="field form-group" >
        <%= f.label :password, class:"form-label" %><br />
        <%= f.password_field :password,class:"form-control mb-2", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-check">
          <%= f.check_box :remember_me, class:"form-check-input"%>
          <%= f.label :remember_me, class:"form-check-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-success mt-2 mb-2"%>
      </div>
  <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
