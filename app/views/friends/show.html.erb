<div class="card text-dark bg-light mt-3" >
  <h5 class="card-header">
    Friend Information
  </h5>
  
  <div class="card-body">
    <h1 class="card-title">
    <%= @friend.first_name %> 
    <%= @friend.last_name %></h1>
    <p class="card-text">
    <%= @friend.email %> |  <%= @friend.phone %> |  <%= @friend.twitter %>
    </p>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
    <%= button_to "Delete this friend", @friend,form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class:"btn btn-danger mt-2"%>
  </div>
</div>



